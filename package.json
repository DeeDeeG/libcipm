{
  "name": "cipm",
  "version": "1.0.0",
  "description": "standalone ci-oriented package installer for npm",
  "main": "index.js",
  "files": [
    "*.js"
  ],
  "scripts": {
    "docs": "tail -n +2 README.md | marked-man --manual 'User Commands' --version \"$npm_package_name@$npm_package_version\" > $npm_package_name.1",
    "prerelease": "npm t",
    "postrelease": "npm publish && git push --follow-tags",
    "pretest": "standard",
    "release": "standard-version -s",
    "test": "tap -J --coverage test/*.js",
    "update-coc": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "update-contrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "repository": "https://github.com/zkat/cipm",
  "keywords": [
    "npm",
    "package manager",
    "caching",
    "downloader"
  ],
  "author": {
    "name": "Kat March√°n",
    "email": "kzm@sykosomatic.org",
    "twitter": "maybekatz"
  },
  "license": "CC0-1.0",
  "dependencies": {
    "bluebird": "^3.5.0",
    "graceful-fs": "^4.1.11",
    "npm-package-arg": "^5.0.1",
    "npmlog": "^4.1.0",
    "pacote": "^2.7.21",
    "rimraf": "^2.6.1",
    "worker-farm": "^1.3.1",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "nyc": "^10.3.2",
    "standard": "^9.0.2",
    "standard-version": "^4.0.0",
    "tap": "^10.3.2",
    "weallbehave": "^1.2.0",
    "weallcontribute": "^1.0.8"
  },
  "config": {
    "nyc": {
      "exclude": [
        "node_modules/**",
        "test/**"
      ]
    }
  }
}
